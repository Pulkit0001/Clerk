<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"

    app:cardForegroundColor="@android:color/transparent"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/check_dues_frag_candidate_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_person_24"
            android:alpha="100"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <TextView
                android:id="@+id/check_dues_frag_candidate_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="72dp"
                android:text="ID: G246875"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/check_dues_frag_candidate_pend_amount_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/check_dues_frag_candidate_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pulkit Aggarwal, 20"
                android:textColor="#000000"
                android:textSize="18sp"

                app:layout_constraintBottom_toTopOf="@+id/check_dues_frag_guardian_name_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/check_dues_frag_guardian_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anita Rani"
                android:textColor="#000000"
                android:textSize="18sp"

                app:layout_constraintBottom_toTopOf="@+id/check_dues_frag_candidate_id_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/check_dues_frag_candidate_pend_amount_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="8dp"
                android:text="pending payments"
                android:textAllCaps="true"
                android:textColor="@color/design_default_color_error"
                android:textSize="24sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/get_more_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/get_more_btn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get More.."
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card_pay_btn" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/card_pay_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAY NOW"
                android:textSize="16sp"
                app:elevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</com.google.android.material.card.MaterialCardView>